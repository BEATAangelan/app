<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_back"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        >
       <ImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@mipmap/login_icon_phone"
           android:layout_marginBottom="10dp"
           />
       <EditText
           android:id="@+id/edit_phone_num"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="手机号"
           android:layout_marginLeft="45dp"
           android:textColorHint="#fff"
           android:background="@null"
           />
        <View
           android:layout_below="@+id/edit_phone_num"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/login_icon_lock"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/edit_phone_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="登录密码"
            android:layout_marginLeft="45dp"
            android:textColorHint="#fff"
            android:background="@null"
            />
        <ImageView
            android:id="@+id/image_eye"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/login_icon_eye"
            android:layout_marginBottom="10dp"
            android:layout_alignRight="@+id/edit_phone_pwd"
            />
        <View
            android:layout_below="@+id/edit_phone_pwd"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        >
        <CheckBox
            android:id="@+id/checkbox_remeber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="记住密码"
            android:textColor="#fff"
            android:buttonTint="#fff"
            />
    <TextView
        android:id="@+id/text_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="快速注册"
        android:textColor="#fff"
        android:layout_marginLeft="150dp"
        />
    </LinearLayout>
    <Button
        android:id="@+id/login_button"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:text="登录"
        android:gravity="center"
        android:textColor="#ff5f71"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:background="@drawable/button_shape"
        />
</LinearLayout>